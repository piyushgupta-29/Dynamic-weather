<style>
    @import url('https://fonts.googleapis.com/css2?family=Corinthia:wght@700&family=Merriweather:ital@1&family=Piazzolla:wght@200;300;400;900&display=swap');
    *{
        margin: 0px;
        padding: 0px;
        box-sizing: border-box;
        font-family: 'Piazzolla',serif;
    }

    body{
        font-size: 62.5%;
        position: relative;
        width: 100vw;
        height: 100vh;
    }
    /* navbar */
    .navbar{
        background-color: rgb(23, 23, 58);
    }
    .fa-snowflake{
        font-size: 3rem;
        margin-left: 5rem;
    }
    .nav-item{
        padding: 0 1rem;
        font-size: 2vw;
    }
    .nav-link{
        color: white;
    }
    a{
        text-decoration: none;
        color: white;
    }
    /* weather page */
    .main{
        display: flex;
        justify-content: space-evenly;
        align-items: center;
        height: 80vh;
        margin-bottom: 1rem;
    }
    .info{
        margin-left: 3rem;
    }
    .info p{
        font-size: 1.2rem;
    }
    .image{
        max-width: 100%;
        height: auto;
    }
    .check{
        margin-top: 2rem;
        padding: .5rem;
        font-size: .7rem;
        border-radius: 20px;
        color: rgb(78, 70, 70);
        font-weight: bold;
        border-color: rgb(78, 70, 70);
        box-shadow: 2px 3px rgb(0, 183, 255);
    }
    .check a{
        color: rgb(65, 57, 57);
    }
    .login{
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .weather-form{
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        margin-top: 5vh;
    }
    .city{
        height: 3rem;
        width: 50rem;
        background-color: rgb(26, 26, 58);
        color: white;
        padding: 1.4rem;
        padding-right: 5rem;
        font-size: 1rem;
        font-weight: 600;
        border: none;
        border-radius: 1.3rem;
    }  
    .search{
        height: 2.5rem;
        width: 4.5rem;
        background-color: rgb(28, 127, 167);
        color: white;
        font-size: 1rem;
        margin-left: -5.2rem;
        border: none;
        border-radius: 1rem;
    }
    .output{
        height: 20rem;
        width: 35rem;
        background-color: rgb(26, 26, 58);
        margin-top: 5rem;
        border-radius: 1rem;
    }
    .date{
        width: 100%;
        height: 20%;
        background-color: rgb(21, 21, 44);
        margin-top: 1rem;
        color: white;
        padding: 1rem;
        font-size: 2rem;
    }
    .result{
        width: 100%;
        height: 75%;
        padding: 1rem;
    }
    .result p{
        color: rgba(255, 255, 255, 0.356);
        font-size: 2rem;
    }
    /* about */
    .about{
        margin-top: 1rem;
    }
    .about h1{
        font-family: 'Corinthia', cursive;
        color:rgb(0, 183, 255);
        font-size: 5rem;
        margin-left: 7rem;
    }
    .about h2{
        font-family: 'Merriweather', serif;
        margin-left: 17rem;
        font-size: 2rem;
        font-weight: bold;
    }
    /* login page */
    .form{
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        margin-top: 5vh;
        border: 1px solid rgb(78, 73, 73);
        border-radius: .5rem;
        padding: 2rem;
    }
    /* dynamic animation */
    .dynamic{
        display: flex;
        justify-content: space-evenly;
    }
    .dynamic h1{
        color: white;
        font-size: 5rem;
        font-weight: bold;
        font-family: 'Merriweather', cursive;
    }
    .fas{
        align-self: center;
        font-size: 4vmax;
        animation-name: enlarge;
        animation-duration: 2s;
        animation-iteration-count: infinite;
        animation-direction: alternate;
    }
    .newhtml h3{
        color: rgba(255, 255, 255, 0.753);
        font-size: 3vmax;
        font-weight: bold;
        font-family: 'Merriweather', serif;
    }
    @keyframes enlarge{
        from{
            font-size: 5rem;
        }
        to{
            font-size: 6rem;
        }
    }
    /* error page */
    .error{
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }
    /* footer */
    footer{
        position: absolute;
        width: 100%;
        padding: 1rem;
        background-color: rgb(23, 23, 58);
        color: white;
        font-size: 1rem;
        text-align: center;
        bottom: 0px;
    }
    /* responsive css */
    @media (max-width:900px)
    {
        .city{
            width:40rem;
        }
        .date{
            font-size: 1.5rem;
        }
        .output{
            width: 30rem;
            height: 17rem;
        }
        .about{
            margin-top: 2rem;
        }
        .about h1{
            font-size: 4.5rem;
            margin-left: 4rem;
        }
        .about h2{
            margin-left: 11rem;
            font-size: 1.7rem;
        }
    }
    @media (max-width:700px)
    {
        .city{
            width: 30rem;
        }
        .search{
            width: 3.8rem;
            font-size: .8rem;
            margin-left: -4.5rem;
        }
        .output{
            width: 25rem;
        }
        .dynamic h1{
            font-size: 4rem;
        }
        .about{
            margin-top: 2rem;
        }
        .about h1{
            font-size: 3.5rem;
            margin-left: 2rem;
        }
        .about h2{
            margin-left: 6rem;
            font-size: 1.4rem;
        }
        .result p{
            font-size: 1.5rem;
        }
    }
    @media (max-width: 520px)
    {
        .city{
            width: 22rem;
        }
        .search{
            width: 3.2rem;
            height: 2.3rem;
            font-size: .6rem;
            margin-left: -3.8rem;
        }
        .output{
            width: 20rem;
        }
        .dynamic h1{
            font-size: 3.5rem;
        }
        .about{
            margin-top: 1.7rem;
        }
        .about h1{
            font-size: 3rem;
            margin-left: 1.5rem;
        }
        .about h2{
            margin-left: 5rem;
            font-size: 1rem;
        }
    }
    @media (max-width:1000px),(max-height:620px)
    {
        img{
            width: 350px;
            height: 250px;
        }
    }
    @media (max-width:762px)
    {
        .main{
            flex-direction: column;
        }
        .info{
            margin: 0px 2rem;
        }
    }
</style>